// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  name    String
  surname String

  email    String @unique
  password String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  Teams UserInTeam[]

  okrs  Okr? @relation(fields: [OkrId], references: [id])
  OkrId Int?

  Keyresults   Keyresults? @relation(fields: [keyresultsId], references: [id])
  keyresultsId Int?
}

model Team {
  id       Int            @id @default(autoincrement())
  name     String
  Users     UserInTeam[]
  createAt DateTime       @default(now())
  updateAt DateTime       @updatedAt
}

model UserInTeam {
  Team   Team? @relation(fields: [TeamId], references: [id])
  TeamId Int

  User   User? @relation(fields: [UserId], references: [id])
  UserId Int

  @@id([TeamId, UserId])
}

model Okr {
  id Int @id @default(autoincrement())

  description String

  assignedAt DateTime @default(now())
  assignedBy String

  krs   Keyresults[]
  users User[]
}

model Keyresults {
  id   Int    @id @default(autoincrement())
  name String

  description String
  status      Boolean @default(false)

  feeling   Feeling? @relation(fields: [feelingId], references: [id])
  feelingId Int?

  date String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  users User[]
  okr   Okr[]
}

model Feeling {
  id   Int    @id @default(autoincrement())
  name String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  keyresults Keyresults[]
}
