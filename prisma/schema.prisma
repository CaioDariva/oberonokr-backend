generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Team {
  id    Int   @id @default(autoincrement())
  name  String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  users User[]
}

