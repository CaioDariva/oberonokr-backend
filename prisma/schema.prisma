// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  name    String
  surname String

  email    String @unique
  password String

  cellphone String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  Teams      Team[]
  Okrs       Objective[]
  keyResults Keyresults[]
}

model Team {
  id   Int    @id @default(autoincrement())
  name String

  users User[]

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Objective {
  id Int @id @default(autoincrement())

  description String

  assignedAt DateTime @default(now())
  assignedBy String

  krs Keyresults[]

  user   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model Keyresults {
  id   Int    @id @default(autoincrement())
  name String

  description String
  status      Boolean @default(false)

  feeling   Feeling? @relation(fields: [feelingId], references: [id])
  feelingId Int?

  date String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  user   User? @relation(fields: [userId], references: [id])
  userId Int?

  okr   Objective? @relation(fields: [okrId], references: [id])
  okrId Int?

}

model Feeling {
  id   Int    @id @default(autoincrement())
  name String

  createAt   DateTime     @default(now())
  updateAt   DateTime     @updatedAt
  keyresults Keyresults[]
}
