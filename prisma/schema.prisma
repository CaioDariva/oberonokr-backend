model Feeling {
  id        Int @id @default(autoincrement())
  name      String?
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  keyresults Keyresults[]
}

model Keyresults {
  id             Int    @id @default(autoincrement())
  name          String
  description   String
  status        Boolean @default(false)
  feeling          Feeling? @relation(fields: [feelingId], references: [id])
  feelingId        Int?
  date          DateTime
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  user     User[]
}

// equipe -> metodologia -> Quarter -> okr -> obj -> kr

model User {
  id       Int    @id @default(autoincrement())
  name     String
  surname  String
  email    String
  password String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  teams     Team[]
  keyresults Keyresults[]
}
